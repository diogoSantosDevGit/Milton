#!/usr/bin/env sh

echo "üîç Running pre-commit checks..."

echo "üîé Running type check..."
npm run type-check || {
  echo "‚ùå Type checking failed. Please fix the errors before committing."
  exit 1
}

echo "üìù Running linter..."
if npm run lint -- --max-warnings=0 2>/dev/null; then
  echo "‚úÖ Linting passed"
else
  echo "‚ö†Ô∏è  Linting failed or not configured. Skipping lint check."
  echo "   (You can run 'npm run lint' manually to check for issues)"
fi

echo "‚úÖ Pre-commit checks completed!"
